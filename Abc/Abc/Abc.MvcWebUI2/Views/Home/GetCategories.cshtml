@model IEnumerable<Abc.MvcWebUI2.Entity.Category>
@{
    var selectedCategory = Url.RequestContext.RouteData.Values["id"];
    //eğerroute içinde id gönderiliyorsa o id burada kullanılır. selectCategory sayfa içinde kullanıma hazırlandı.
}



<ul class="list-group">

    <a href="/Home/List" class="list-group-item">
        <i class="fa fa-angle-double-right" arria-hidden="true"> </i>
        Tüm Kategoriler
    </a>

    </>

    @foreach (var item in Model)
    {
        if (selectedCategory != null)
        {

            if (item.Id == int.Parse(selectedCategory.ToString()))
            {
                //Seçilen kategori ile route id si biririne eşit.

                <a href="/Home/List/@item.Id" class="list-group-item active ">
                    <i class="fa fa-angle-double-right" arria-hidden="true"> </i>
                    @item.Name
                </a>

            }
            else
            {

                <a href="/Home/List/@item.Id" class="list-group-item ">
                    <i class="fa fa-angle-double-right" arria-hidden="true"> </i>
                    @item.Name
                </a>

            }
        }
        else
        {

            <a href="/Home/List/@item.Id" class="list-group-item ">
                <i class="fa fa-angle-double-right" arria-hidden="true"> </i>
                @item.Name
            </a>

        }
    }

</ul>
